<?xml version="1.0"?>
<configuration>


    <!-- #################################### -->
    <!--                                      -->
    <!-- Configuration registers              -->
    <!--                                      -->
    <!-- #################################### -->
    <registers>
        <register name="SMBUS_VID"  type="pcicfg" offset="0x00" size="2" desc="VID" />
        <register name="SMBUS_DID"  type="pcicfg" offset="0x02" size="2" desc="DID" />
        <register name="SMBUS_CMD"  type="pcicfg" offset="0x04" size="2" desc="CMD" />
        <register name="SMB_BASE"   type="pcicfg" offset="0x20" size="4" desc="SMBus Base Address">
            <field  name="Base"      bit="5" size="11"   desc="Base Address"/>
        </register>
        <register name="SMBUS_HCFG" type="pcicfg" offset="0x40" size="1" desc="Host Configuration">
            <field name="HST_EN"     bit="0" size="1"/>
            <field name="SMB_SMI_EN" bit="1" size="1"/>
            <field name="I2C_EN"     bit="2" size="2"/>
            <field name="SSRESET"    bit="3" size="1"/>
            <field name="SPD_WD"     bit="4" size="1"/>
        </register>

    </registers>

  <!-- #################################### -->
  <!--                                      -->
  <!-- 'Controls'                           -->
  <!--                                      -->
  <!-- #################################### -->
    <controls>
    </controls>

</configuration>