<?xml version="1.0"?>
<configuration>


    <!-- #################################### -->
    <!--                                      -->
    <!-- Configuration registers              -->
    <!--                                      -->
    <!-- #################################### -->
    <registers>
        <register name="ABASE" type="pcicfg" offset="0x40" size="4" desc="ACPI Base Address">
            <field name="STYPE" bit="0" size="1" desc="Space Type (always 1 - I/O space)"/>
            <field name="BA"    bit="8" size="24" desc="Base Address"/>
        </register>
        <register name="PWRMBASE" type="pcicfg" offset="0x10" size="4" desc="PM Base Address">
            <field name="STYPE" bit="0"  size="1"  desc="Space Type (always 0 - memory space)"/>
            <field name="BA"    bit="14" size="18" desc="Base Address"/>
        </register>
        <register name="GEN_PMCON_1" type="pcicfg" offset="0xA0" size="4" desc="General PM Configuration A">
            <field name="SMI_LOCK"    bit="4"     size="1"/>
        </register>
        <register name="GEN_PMCON_2" type="pcicfg" offset="0xA4" size="4" desc="General PM Configuration B">
        </register>
        <register name="ACTL" type="pcicfg" offset="0x44" size="4" desc="ACPI Control">
            <field name="SCIS"    bit="0" size="3" desc="SCI IRQ Select"/>
        </register>


    </registers>

  <!-- #################################### -->
  <!--                                      -->
  <!-- 'Controls'                           -->
  <!--                                      -->
  <!-- #################################### -->
    <controls>
        <control name="SMILock"                register="GEN_PMCON_1"          field="SMI_LOCK"           desc="SMI Global Configuration Lock"/>
    </controls>

</configuration>